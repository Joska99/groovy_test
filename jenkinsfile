node('agent1') {
    stage('Multy-branch-test') {
        sh 'ls -lah'
        sh 'env'
    }
    stage('split-nu') {
        if (env.BRANCH_NAME == 'main') {
            stage('main-test') {
                echo 'main trigger'
                echo "$env.BRANCH_NAME"
            }
        } else {
            stage('dev-Docker-build') {
                git branch: "$env.BRANCH_NAME", url:  'https://github.com/Joska99/groovy_test.git'
                def myEnv = docker.build('test:1')
                echo "$myEnv"
                docker images
                sh 'ls -lah'
            }
            stage('dev-Docker-build') {
                echo 'other branch'
                echo "$env.BRANCH_NAME"
            }
        }
    }
}

